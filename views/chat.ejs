<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Chat with <%= otherUsername %></title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Reset default margins and paddings */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      display: flex;
      flex-direction: column;
      height: 100vh; /* Full viewport height */
    }

    /* Header styling */
    header {
      background-color: #2c3e50;
      color: #ecf0f1;
      padding: 15px 0;
      text-align: center;
      flex-shrink: 0;
    }

    header h1 {
      margin: 0;
      font-size: 2em;
    }

    /* Navigation bar styling */
    nav {
      background-color: #34495e;
      display: flex;
      justify-content: center;
      padding: 10px 0;
      flex-shrink: 0;
    }

    nav a {
      color: #ecf0f1;
      text-decoration: none;
      margin: 0 15px;
      padding: 10px 20px;
      font-weight: bold;
      border-radius: 5px;
      transition: background-color 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    nav a:hover {
      background-color: #2980b9;
    }

    /* Main container holding chat messages and input form */
    .main-container {
      display: flex;
      flex-direction: column;
      flex-grow: 1; /* Take up remaining space */
      padding: 20px;
      overflow: hidden; /* Prevent overflow from main container */
    }

    /* Chat messages section */
    .chat-messages {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      flex-grow: 1; /* Take up available vertical space */
      overflow-y: auto; /* Enable vertical scrolling */
      margin-bottom: 20px;
    }

    .message {
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 5px;
      word-wrap: break-word;
    }

    .message.sent {
      background-color: #d1ffd1;
      text-align: right;
    }

    .message.received {
      background-color: #f1f1f1;
      text-align: left;
    }

    .timestamp {
      font-size: 0.8em;
      color: #777;
      display: block;
      margin-top: 5px;
    }

    /* Message input form container */
    .message-form-container {
      display: flex;
      justify-content: center; /* Center the form horizontally */
      align-items: center;
      flex-shrink: 0; /* Prevent shrinking */
    }

    /* Form styling */
    form {
      display: flex;
      width: 60%; /* Adjust the width as needed */
      max-width: 800px;
      background-color: #ffffff;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

    textarea {
      width: 80%;
      padding: 12px;
      border-radius: 5px;
      border: 1px solid #ccc;
      resize: none;
      height: 60px; /* Increased height for better visibility */
      font-size: 1em;
      margin-right: 10px; /* Space between textarea and button */
    }

    button {
      width: 20%;
      background-color: #3498db;
      color: white;
      padding: 12px 0; /* Vertical padding for better button height */
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1em;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #2980b9;
    }

    /* Footer styling */
    footer {
      text-align: center;
      padding: 20px;
      background-color: #2c3e50;
      color: #ecf0f1;
      flex-shrink: 0;
    }

    /* Responsive design */
    @media (max-width: 768px) {
      form {
        width: 90%; /* Make the form wider on small screens */
      }

      textarea {
        width: 70%;
        height: 50px;
      }

      button {
        width: 30%;
      }
    }
  </style>
</head>
<body>

  <!-- Header Section -->
  <header>
    <div>
      <h1>Chat with <%= otherUsername %></h1>
    </div>
  </header>

  <!-- Navigation Bar -->
  <nav>
    <a href="/dashboard">Back to Dashboard</a>
    <a href="/information">Information</a>
    <a href="/products">Products</a>
  </nav>

  <!-- Main Content Section -->
  <div class="main-container">
    <!-- Chat Messages Section -->
    <div class="chat-messages" id="chat-messages">
      <% messages.forEach(function(message) { %>
        <div class="message <%= message.sender_username === currentUsername ? 'sent' : 'received' %>">
          <strong><%= message.sender_username %></strong>: <%= message.text %>
          <span class="timestamp"><%= new Date(message.timestamp).toLocaleString() %></span>
        </div>
      <% }); %>
    </div>

    <!-- Form to send a new message -->
    <div class="message-form-container">
      <form action="/dms/<%= otherUsername %>" method="POST">
        <textarea name="message" placeholder="Type your message..." required></textarea>
        <button type="submit">Send</button>
      </form>
    </div>
  </div>

  <!-- Footer Section -->
  <footer>
    <div>
      <p>&copy; <%= new Date().getFullYear() %> Glopak Ambalaj - All Rights Reserved</p>
    </div>
  </footer>

  <!-- Scroll to bottom when page loads -->
  <script>
    var chatMessages = document.getElementById('chat-messages');
    chatMessages.scrollTop = chatMessages.scrollHeight;
  </script>

</body>
</html>


