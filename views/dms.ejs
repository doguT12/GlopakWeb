<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Direct Messages</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    header {
      background-color: #2c3e50;
      color: #ecf0f1;
      padding: 10px 0;
      text-align: center;
    }

    header h1 {
      margin: 0;
      font-size: 2em;
    }

    nav {
      background-color: #34495e;
      display: flex;
      justify-content: space-around;
      padding: 10px;
    }

    nav a {
      color: #ecf0f1;
      text-decoration: none;
      padding: 10px 20px;
      font-weight: bold;
      transition: background-color 0.3s;
    }

    nav a:hover {
      background-color: #2980b9;
    }

    .dm-list {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
    }

    .dm-list h2 {
      font-size: 1.8em;
      margin-bottom: 20px;
    }

    .dm-item {
      background-color: #ecf0f1;
      padding: 15px;
      margin-bottom: 10px;
      border-radius: 5px;
      text-align: left;
    }

    .dm-item a {
      text-decoration: none;
      color: #2980b9;
      font-weight: bold;
    }

    .dm-item a:hover {
      color: #1e6d98;
    }

    .search-form {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .search-form label {
      font-size: 1.2em;
      display: block;
      margin-bottom: 10px;
    }

    .search-form input {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 1.1em;
    }

    .search-form button {
      background-color: #3498db;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1.2em;
    }

    .search-form button:hover {
      background-color: #2980b9;
    }

    footer {
      text-align: center;
      padding: 20px;
      background-color: #2c3e50;
      color: #ecf0f1;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <!-- Header Section -->
  <header>
    <div class="container">
      <h1>Direct Messages</h1>
    </div>
  </header>

  <!-- Navigation Bar -->
  <nav>
    <a href="/dashboard">Back to Dashboard</a>
    <a href="/information">Information</a>
    <a href="/products">Products</a>
  </nav>

  <!-- DM List -->
  <div class="container">
    <div class="dm-list">
      <h2>Your Open Conversations</h2>
      <% if (dms.length > 0) { %>
        <% dms.forEach(function(dm) { %>
          <div class="dm-item">
            <a href="/dms/<%= dm.otherUsername %>">
              Conversation with <%= dm.otherUsername %>
            </a>
          </div>
        <% }); %>
      <% } else { %>
        <p>No open conversations yet.</p>
      <% } %>
    </div>

    <!-- Search for Users -->
    <div class="search-form">
      <h2>Start a New Conversation</h2>
      <form action="/dms/new" method="POST">
        <label for="username">Search by Username</label>
        <input type="text" id="username" name="username" placeholder="Enter username..." required>
        <button type="submit">Start Conversation</button>
      </form>
    </div>
  </div>

  <!-- Footer Section -->
  <footer>
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> Glopak Ambalaj - All Rights Reserved</p>
    </div>
  </footer>

</body>
</html>
